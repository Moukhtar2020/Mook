@model System.Data.DataTable

@{
    ViewBag.Title = "Edit Research Projects";
}

@if ((string)Session["user_type"] != "0")
{
    Response.Redirect("~/Home/Index");
}

<h2>Research Projects</h2>
<p>
    @Html.ActionLink("Create New", "AdminResearchAdd", "Home")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
     
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>
                @Model.Rows[i]["research_title"]
            </td>
           
            <td>
                <a href="./AdminResearchEdit/@Model.Rows[i]["research_id"]">Edit</a>
                |
                <a href="./AdminResearchDelete/@Model.Rows[i]["research_id"]">Delete</a>
            </td>

        </tr>
    }

</table>
