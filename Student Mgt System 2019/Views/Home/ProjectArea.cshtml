@model System.Data.DataTable

@{
    ViewBag.Title = "Project Area";
}

<h2>Project Area</h2>

@if((string)Session["user_type"]=="1")
{
   @Html.ActionLink("Edit Your Project","EditStudentProject/"+Session["user_id"]) 

}

<table class="table">
    <tr>
        <th>
            Project Title
        </th>
        <th>
            Project Description
        </th>
        <th>
            Project Picture
        </th>

@if(Session["user_id"] != null)
           {
        <th> Student Name</th>
        <th>Link</th>
        <th> Student Id</th>
}
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>
                @Model.Rows[i]["project_title"]
            </td>
            <td>
                @Model.Rows[i]["project_text"]
            </td>
            <td>
               <img src="../Assets/@Model.Rows[i]["project_picture"]" width="50" height="50" />
            </td>

           

           @if(Session["user_id"] != null)
           {
                <td><a href="@Url.Action("Profile2", "Home", new { id = @Model.Rows[i]["reg_id"] })" class="elements" ><span>@Model.Rows[i]["reg_name"]</span></a></td>
         

          

            

            <td><a href="@Model.Rows[i]["project_link"]" target="_blank" >Link</a></td>

            <td>@Model.Rows[i]["reg_id"] </td>
           }
                 

        </tr>
    }

</table>
